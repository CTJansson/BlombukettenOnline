@{
    ViewBag.Title = "Kassa - Blombuketten Online";
}

<div class="container">
    <div class="row">
        <p></p>
    </div>

    <div class="row">

        <div class="col-md-2 col-sm-12">

        </div> <!-- end left grid -->

        <div class="col-md-7 col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="glyphicon glyphicon-shopping-cart"></span> Varukorg</h3>
                </div> <!-- end panel-heading -->

                <div class="panel-body panel-body-nesting">
                    <div class="list-group" id="buybag">

                        <!-- Buquettes goes here! -->

                    </div> <!-- end list-group -->
                </div> <!-- end panel-body-nesting -->
            </div> <!-- end panel-default -->
        
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h4 class="sum-right">
                        Summa: <span id="total-sum"> kr</span>
                    </h4>
                </div>

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><span class="glyphicon glyphicon-credit-card"></span> Betalningsmetod</h3>
                        </div> <!-- end panel-heading -->
                        @*<div class="panel-body panel-body-nesting">
                                <div class="list-group">
                                    <a href="#" class="list-group-item active">Betala i butik</a>
                                    <a href="#" class="list-group-item">Kortbetalning</a>
                                    <a href="#" class="list-group-item">Internetbank</a>
                                    <a href="#" class="list-group-item">Paypal</a>
                                    <a href="#" class="list-group-item">Swish</a>
                                </div>
                            </div>*@
                        <div id="payment-methods">
                            <button type="button" class="btn btn-primary btn-lg btn-block textarea-full-small option-button" id="payment-method-store"><span class="glyphicon glyphicon-check"></span> Betala i butik</button>
                            @*<button type="button" class="btn btn-default btn-lg btn-block textarea-full-small option-button" id="payment-method-card"><span class="glyphicon glyphicon-unchecked"></span> Kortbetalning</button>*@
                            <button type="button" class="btn btn-default btn-lg btn-block textarea-full-small option-button" id="payment-method-bank"><span class="glyphicon glyphicon-unchecked"></span> Internetbank</button>
                            <button type="button" class="btn btn-default btn-lg btn-block textarea-full-small option-button" id="payment-method-paypal"><span class="glyphicon glyphicon-unchecked"></span> Paypal</button>
                            @*<button type="button" class="btn btn-default btn-lg btn-block textarea-full-small option-button" id="payment-method-swish"><span class="glyphicon glyphicon-unchecked"></span> Swish</button>*@
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="panel panel-default payment-option-panel" id="payment-options-selectstore-panel">
                        <div class="panel-heading">
                            <h3 class="panel-title"><span class="glyphicon glyphicon-map-marker"></span> Välj butik</h3>
                        </div>
                        <div id="payment-options-selectstores">
                            <button type="button" class="btn btn-primary btn-lg btn-block textarea-full-small option-button" id="payment-options-selectstore-1"><span class=" glyphicon glyphicon-check"></span> Göteborg</button>
                            <button type="button" class="btn btn-default btn-lg btn-block textarea-full-small option-button" id="payment-options-selectstore-2"><span class=" glyphicon glyphicon-unchecked"></span> Stockholm</button>
                            <button type="button" class="btn btn-default btn-lg btn-block textarea-full-small option-button" id="payment-options-selectstore-3"><span class=" glyphicon glyphicon-unchecked"></span> Malmö</button>
                        </div>
                    </div>

                    <div class="panel panel-default payment-option-panel" id="payment-options-paypal-panel" hidden>
                        <div class="panel-heading">
                            <h3 class="panel-title"><span class="glyphicon glyphicon-credit-card"></span> PayPal</h3>
                        </div>

                        <img src="http://www.geo-web.org.uk/geoimages/PayPal_mark_50x34.gif" class="img-responsive panel-text-padding">
                        <p class="panel-text-padding">
                            Du kommer att skickas till PayPals betalningssida efter att ordern bekräftats.
                        </p>


                    </div>

                    <div class="panel panel-default payment-option-panel" id="payment-options-selectbank-panel" hidden>
                        <div class="panel-heading">
                            <h3 class="panel-title"><span class="glyphicon glyphicon-tasks"></span> Välj internetbank</h3>
                        </div>
                        <div id="payment-options-selectbanks">
                            <button type="button" class="btn btn-primary btn-lg btn-block textarea-full-small option-button" id="payment-options-selectbank-1"><span class=" glyphicon glyphicon-check"></span> SEB</button>
                            <button type="button" class="btn btn-default btn-lg btn-block textarea-full-small option-button" id="payment-options-selectbank-2"><span class=" glyphicon glyphicon-unchecked"></span> Handelsbanken</button>
                            <button type="button" class="btn btn-default btn-lg btn-block textarea-full-small option-button" id="payment-options-selectbank-3"><span class=" glyphicon glyphicon-unchecked"></span> Nordea</button>
                            <button type="button" class="btn btn-default btn-lg btn-block textarea-full-small option-button" id="payment-options-selectbank-4"><span class=" glyphicon glyphicon-unchecked"></span> Swedbank</button>
                        </div>
                    </div>

                </div>
            </div> <!-- end row -->

            <div class="row">

                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><span class="glyphicon glyphicon-road"></span> Leverensmetod</h3>
                        </div> <!-- end panel-heading -->
                        <div id="shipping-options">
                            <button type="button" class="btn btn-primary btn-lg btn-block textarea-full-small option-button" id="shipping-option-1"><span class=" glyphicon glyphicon-check"></span> Hämta i butik</button>
                            <button type="button" class="btn btn-default btn-lg btn-block textarea-full-small option-button" id="shipping-option-2"><span class=" glyphicon glyphicon-unchecked"></span> Skicka hem till mig</button>
                            <button type="button" class="btn btn-default btn-lg btn-block textarea-full-small option-button" id="shipping-option-3"><span class=" glyphicon glyphicon-unchecked"></span> Skicka till någon annan</button>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-12">
                    <div class="panel panel-default shipping-option-panel" id="shipping-option-address-panel" hidden>
                        <div class="panel-heading">
                            <h3 class="panel-title"><span class="glyphicon glyphicon-home"></span> Leveransadress</h3>
                        </div> <!-- end panel-heading -->
                        <form class="textarea-full-small">
                            <div class="form-group">
                                <label for="nameinput">Mottagarens namn</label>
                                <input type="text" class="form-control email-full" id="nameinput">
                            </div>
                            <div class="form-group">
                                <label for="streetinput">Gata</label>
                                <input type="text" class="form-control email-full" id="streetinput">
                            </div>
                            <div class="form-group">
                                <label for="zipinput">Postnummer</label>
                                <input type="text" class="form-control email-full" id="zipinput">
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12" hidden>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><span class="glyphicon glyphicon-map-marker"></span> Välj butik</h3>
                        </div> <!-- end panel-heading -->
                        <button type="button" class="btn btn-primary btn-lg btn-block">Stockholm</button>
                        <button type="button" class="btn btn-default btn-lg btn-block">Göteborg</button>
                        <button type="button" class="btn btn-default btn-lg btn-block">Malmö</button>
                    </div>
                </div>
            </div>
            @*<div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="glyphicon glyphicon-time"></span> Leveranstid</h3>
                </div>
                <form class="textarea-full form-inline">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Datum</label>
                        <input type="date" class="form-control email-full" placeholder="Format: 2015-05-28">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tid</label>
                        <input type="time" class="form-control email-full" placeholder="Format: 14:00">
                    </div>
                </form>
            </div>*@

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="glyphicon glyphicon-comment"></span> Meddelande till butiken</h3>
                </div> <!-- end panel-heading -->
                <form>
                    <fieldset>
                        <textarea rows="3" class="form-control textarea-full" id="commentinput"></textarea>
                    </fieldset>
                </form>
            </div> <!-- end panel -->

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="glyphicon glyphicon-envelope"></span> Kontaktinformation</h3>
                </div> <!-- end panel-heading -->
                <form class="textarea-full">
                    <div class="form-group">
                        <label for="emailinput">E-postadress</label>
                        <input type="email" class="form-control email-full" id="emailinput">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="subscribe" id="chbx-subscribe" checked> Ja tack, jag vill gärna ha erbjudanden och nyheter via e-post.
                        </label>
                    </div>
                </form>
            </div> <!-- end panel -->

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="glyphicon glyphicon-ok"></span> Bekräfta order</h3>
                </div> <!-- end panel-heading -->
                <button type="button" class="btn btn-primary btn-lg btn-block textarea-full" id="btn-confirm-order" onclick="createOrder()">Bekräfta order</button>
            </div> <!-- end panel -->

            <div class="alert alert-success" role="alert" id="order-confirmed-alert" hidden><strong>Godkänt!</strong> Din order är nu skickad, du får ett mail när den har mottagits av vår personal.</div>

        </div> <!-- end center grid -->

        <div class="col-md-3 col-sm-12">
        </div> <!-- end right grid -->

    </div>
</div>
<script src="~/Scripts/CheckOut.js"></script>