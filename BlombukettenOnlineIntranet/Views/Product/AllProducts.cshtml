@model IEnumerable<BlombukettenOnlineIntranet.Models.ProductViewModel>

@{
    ViewBag.Title = "AllProducts";
}

</br>
</br>

<div id="display">
    <p>
        @Html.ActionLink("Create New", "Create",new object(), new { @class = "btn-link", style = "color:gray" })
    </p>
    </br>
    <table class="table tableBorder">
        <tr>
            <th style="color:green">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style ="color:green">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th style="color:green">
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th style="color:green">
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th style="color:green">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>*@
            <th style="color:green">
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>*@
                <td>
                    <img src="~/Images/rödros.jpg" style="width:20px;height:20px;">
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn-link", @style = "color:green" }) |
                    @Ajax.ActionLink("Details", "Details", new { id = item.Id }, new AjaxOptions { UpdateTargetId = "display" }, new { @class = "btn-link", @style = "color:green" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn-link", @style = "color:darkred" })
                </td>
            </tr>
        }
    </table>
</div>