@model IEnumerable<BlombukettenOnlineIntranet.Models.CategoryViewModel>

@{
    ViewBag.Title = "Index";
}

<br />
<br />

<p>
    @Html.ActionLink("Lägg till ny category", "Create", new { @class = "btn btn-link", style = "color:gray" })
</p>
<br />
<table class="table table-hover tableBorder">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.ParentId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
            <td>
                @if (item.ParentId != null)
                {
                    @Html.DisplayFor(modelItem => Model.FirstOrDefault(x => x.Id == item.ParentId).Name)
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) @*|*@
                @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
