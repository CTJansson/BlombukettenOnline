@model IEnumerable<BlombukettenOnlineIntranet.Models.ColorViewModel>

@{
    ViewBag.Title = "Index";
}

<br />
<br />

<p>
    @Html.ActionLink("Lägg till ny färg", "Create", new { @class = "btn btn-link", style = "color:gray" })
</p>
<br/>
<table class="table table-hover tableBorder">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Redigera", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) @*|*@
                @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                @Html.ActionLink("Ta bort", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
